    "downshift": "9.0.13",
    "howler": "2.2.4",
    "idb-keyval": "6.2.2",
    "ioredis": "5.8.2",
    "match-sorter": "8.2.0",
    "negotiator": "1.0.0",
    "next": "16.1.0",
    "postgres": "^3.4.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
